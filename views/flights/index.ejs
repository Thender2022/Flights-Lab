<%- include('../partials/header') %>


<h2>Flight List</h2>
<table>
  <thead>
    <tr>
      <th>Airport</th>
      <th>Airline</th>
      <th>Flight No.</th>
      <th>Departure Date</th>
      <!-- <th>Now Showing</th> -->
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(f) { %>
      <tr>
        <td><%= f.airport %></td>
        <td><%= f.airline %></td>
        <td><%= f.flightNo %></td>
        <td><%= f.departs %></td>
        <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
      </tr>
    <% }); %>
  </tbody> 
</table>

